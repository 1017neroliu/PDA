<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppMyTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="style_common_text">
        <item name="android:text">@string/unit_details</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="style_common_bottom_text_view" parent="style_common_text">
        <item name="android:layout_width">@dimen/bottom_button_width</item>
        <item name="android:layout_height">@dimen/bottom_button_height</item>
        <item name="android:text">@string/unit_details</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_bottom_text_next</item>
    </style>


    <style name="style_home_bottom_text_view" parent="style_common_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="style_home_bottom_text_view2" parent="style_common_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/unit_details</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="style_transfer_large_text_view" parent="style_common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_40</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/unit_details</item>
    </style>

    <style name="style_transfer_unit_text_view" parent="style_common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/unit_details</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_web_transfer_text">
        <item name="android:text">@string/unit_details</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/dp_12</item>
    </style>


</resources>