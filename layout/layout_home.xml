<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/home_head_res"
        layout="@layout/activity_home_head"
        />
<TableLayout
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="100dp" >
    <TableRow>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/jinriruku_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="20"
                android:textSize="20sp"
                android:textColor="@drawable/red"
                />
            <TextView
                android:id="@+id/jinriruku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/jinriruku_quan"
                android:text="今日入库"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/jinrichuku_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="20"
                android:textSize="20sp"
                android:textColor="@drawable/change_color"
                />
            <TextView
                android:id="@+id/jinrichuku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jinrichuku_quan"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="今日出库"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/kucunbuzu_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="20"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/kucunbuzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kucunbuzu_quan"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="库存不足"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/kucunguoduo_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="20"
                android:textSize="20sp"
                android:textColor="@color/color_storage"
                />
            <TextView
                android:id="@+id/kucunguoduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kucunguoduo_quan"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:text="库存过多"/>
        </RelativeLayout>
    </TableRow>
</TableLayout>
<TableLayout
    android:id="@+id/TableLayout2"
    android:layout_below="@+id/RelativeLayout1"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="110dp"
    android:layout_width="fill_parent"
    android:layout_height="390dp">
    <TableRow>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/ruku_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ruku"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/ruku_btn"
                android:text="入库"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/chuku_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/chuku"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/chuku_btn"
                android:text="出库"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/pandian_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/pandian"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/pandian_btn"
                android:text="盘点"
                />
        </RelativeLayout>
    </TableRow>
    <TableRow>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/fenjian_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/fenjian" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/fenjian_btn"
                android:text="分拣"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/kucun_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/kucun"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/kucun_btn"
                android:text="库存"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/shangpin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shangpin"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/shangpin_btn"
                android:text="商品"
                />
        </RelativeLayout>
    </TableRow>
    <TableRow>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/tubiao_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tubiao"
            android:layout_centerInParent="true"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/tubiao_btn"
                android:text="图表"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/diaobo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/diaobo"
            android:layout_centerInParent="true"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/diaobo_btn"
                android:text="调拨"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            >
        <ImageButton
            android:id="@+id/kuaijie_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/kuaijie"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/kuaijie_btn"
                android:text="快捷"
                />
        </RelativeLayout>
    </TableRow>
</TableLayout>
    <include
        android:id="@+id/home_foot_res"
        layout="@layout/activity_home_foot"
        />
</LinearLayout>
