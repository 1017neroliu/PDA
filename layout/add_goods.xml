<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    >
    <include
        android:id="@+id/add_good"
        layout="@layout/add_goods_top"
        />
    <RelativeLayout
        android:id="@+id/add_goods1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner"
        >
        <RadioButton
            android:id="@+id/button1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/add_image1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/button1"
            android:src="@drawable/item"
            />
        <TextView
            android:id="@+id/item_word1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品编码"
            android:layout_toRightOf="@+id/add_image1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/jiantou1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/item_word1"
            android:src="@drawable/jiantou_zuo" />
        <ImageView
            android:id="@+id/item_image1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/item_word1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/coco"/>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/item_image1"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/jiantou1"
            >
            <TextView
                android:id="@+id/wenzi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="日程本2019工作效率手册记录日记事本手账本计划本商务本笔记本记"/>
            <Spinner
                android:id="@+id/list1"
                android:layout_below="@+id/wenzi1"
                android:layout_width="180dp"
                android:layout_height="20dp"
                />
            <TextView
                android:id="@+id/item_kucun1"
                android:layout_below="@+id/list1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="货品库存:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/list1"
                android:layout_toRightOf="@+id/item_kucun1"
                android:text="200"
                android:textColor="@color/colorPrimary"
                />
        </RelativeLayout>
    </RelativeLayout>
