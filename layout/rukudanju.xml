<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    >
    <include
        android:id="@+id/rukudan"
        layout="@layout/rukudanju_top"
        />
<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单据日期"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-08-20"
            android:layout_toRightOf="@+id/record_date"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_below="@+id/date"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/record_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单据编号"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <EditText
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/record_num"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
    </RelativeLayout>
</RelativeLayout>
    //==============================================
    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
    <RelativeLayout
        android:id="@+id/cangku"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/cangku_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仓库"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jionn的仓库"
            android:layout_toRightOf="@+id/cangku_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_toRightOf="@+id/who"
            android:background="@color/gray"
            android:src="@drawable/jiantou_zuo" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/leixing"
            android:layout_below="@+id/cangku"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/leixing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="325dp"
                android:layout_toRightOf="@+id/leixing_text"
                android:background="@color/gray"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/bumen"
        android:layout_below="@+id/leixing"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/bumen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在部门"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="293dp"
            android:layout_toRightOf="@+id/bumen_text"
            android:background="@color/gray"
            android:src="@drawable/jiantou_zuo" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/vendor"
            android:layout_below="@+id/bumen"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/vendor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供应商"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="310dp"
                android:layout_toRightOf="@+id/vendor_text"
                android:background="@color/gray"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/jiaohuo"
            android:layout_below="@+id/vendor"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/jiaohuo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交货人"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="310dp"
                android:layout_toRightOf="@+id/jiaohuo_text"
                android:background="@color/gray"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/jingban"
            android:layout_below="@+id/jiaohuo"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/jingban_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经办人"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin"
                android:layout_toRightOf="@+id/jingban_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="140dp"
                android:layout_toRightOf="@+id/admin"
                android:background="@color/gray"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
            <TextView
                android:id="@+id/memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注信息"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            android:id="@+id/crm_man_foot"
            layout="@layout/crm_foot"/>
    </RelativeLayout>
</LinearLayout>
