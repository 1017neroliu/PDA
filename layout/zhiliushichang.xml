<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/zhiliushichang"
        layout="@layout/zhiliushichang_top"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner"
        >
    <ImageView
        android:id="@+id/task_icon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/task"
        />
    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天威墨粉"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/task_icon1"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sanjiao"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="型号："
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/text_1"
        />
    <TextView
        android:id="@+id/bianhao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="1564321694523165"
        android:layout_toRightOf="@+id/num_1"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/churu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/num_1"
        android:layout_marginLeft="40dp"
        />
        <TextView
            android:id="@+id/mychu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MF0025"
            android:layout_below="@+id/bianhao1"
            android:layout_toRightOf="@+id/churu1"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/zuichang1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最长在库:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/churu1"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/zuichangtian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456天"
            android:layout_below="@+id/mychu1"
            android:layout_toRightOf="@+id/zuichang1"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/you1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/zuichang1"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/youtian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456天"
            android:layout_below="@+id/zuichangtian1"
            android:layout_toRightOf="@+id/you1"
            android:textStyle="bold"
            android:textSize="16sp"
            />

    <Spinner
        android:id="@+id/xiala1"
        android:layout_below="@+id/you1"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Spinner>
    <TextView
        android:id="@+id/create1"
        android:layout_below="@+id/xiala1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="当前库存："
        />
    <TextView
        android:id="@+id/name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="400"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/create1"
        android:layout_below="@+id/xiala1"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner"
        >
        <ImageView
            android:id="@+id/task_icon2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/task"
            />
        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天威墨粉"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/task_icon2"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sanjiao"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="型号："
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/text_2"
            />
        <TextView
            android:id="@+id/bianhao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="1564321694523165"
            android:layout_toRightOf="@+id/num_2"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/churu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/num_2"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/mychu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MF0025"
            android:layout_below="@+id/bianhao2"
            android:layout_toRightOf="@+id/churu2"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/zuichang2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最长在库:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/churu2"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/zuichangtian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456天"
            android:layout_below="@+id/mychu2"
            android:layout_toRightOf="@+id/zuichang2"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/you2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/zuichang2"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/youtian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="456天"
            android:layout_below="@+id/zuichangtian2"
            android:layout_toRightOf="@+id/you2"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/xiala2"
            android:layout_below="@+id/you2"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:id="@+id/create2"
            android:layout_below="@+id/xiala2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="当前库存："
            />
        <TextView
            android:id="@+id/name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/create2"
            android:layout_below="@+id/xiala2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <include
            android:id="@+id/zhiliushichang_res"
            layout="@layout/activity_home_foot"
            />
    </RelativeLayout>
</LinearLayout>
