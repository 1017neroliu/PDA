<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/settingTop"
        layout="@layout/setting_top"
        />
    <RelativeLayout
        android:id="@+id/validate_total"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/validate_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="有效期：2020-2-20"
            />
        <TextView
            android:id="@+id/validate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/validate_image"
            android:layout_marginLeft="35dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="用户数:99"
            />
        <RelativeLayout
            android:layout_toRightOf="@+id/validate_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_width="60dp"
            android:background="@color/color_orange"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="版本" />
        </RelativeLayout>
    </RelativeLayout>
<LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<RelativeLayout
    android:id="@+id/mima_total"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/mima_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/mima"/>
    <TextView
        android:id="@+id/mima_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mima_image"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:text="密码修改"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="270dp"
        android:background="@color/gray"
        android:layout_toRightOf="@+id/mima_text"
        android:src="@drawable/jiantou_zuo" />
</RelativeLayout>
    <RelativeLayout
    android:id="@+id/canshu_total"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/canshu_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/canshu"/>
    <TextView
        android:id="@+id/canshu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/canshu_image"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:text="参数设置"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="270dp"
        android:background="@color/gray"
        android:layout_toRightOf="@+id/canshu_text"
        android:src="@drawable/jiantou_zuo" />
</RelativeLayout>
    <RelativeLayout
    android:id="@+id/data_total"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/data_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/data"/>
    <TextView
        android:id="@+id/data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/data_image"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:text="数据同步"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="270dp"
        android:background="@color/gray"
        android:layout_toRightOf="@+id/data_text"
        android:src="@drawable/jiantou_zuo" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/manager_total"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/manager_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/manager"/>
        <TextView
            android:id="@+id/manager_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/manager_image"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="管理工具"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="270dp"
            android:background="@color/gray"
            android:layout_toRightOf="@+id/manager_text"
            android:src="@drawable/jiantou_zuo" />
    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/vedio_total"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/vedio_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/vedio"/>
            <TextView
                android:id="@+id/vedio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vedio_image"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="视频教程"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="270dp"
                android:background="@color/gray"
                android:layout_toRightOf="@+id/vedio_text"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tuijian_total"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/tuijian_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/tuijian"/>
            <TextView
                android:id="@+id/tuijian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tuijian_image"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="推荐设备"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="270dp"
                android:background="@color/gray"
                android:layout_toRightOf="@+id/tuijian_text"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/update_total"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/update_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/update"/>
            <TextView
                android:id="@+id/update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/update_image"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="检查更新"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="270dp"
                android:background="@color/gray"
                android:layout_toRightOf="@+id/update_text"
                android:src="@drawable/jiantou_zuo" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/guanyu_total"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/guanyu_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/guanyu"/>
        <TextView
            android:id="@+id/guanyu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/guanyu_image"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="关于"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:background="@color/gray"
            android:layout_toRightOf="@+id/guanyu_text"
            android:src="@drawable/jiantou_zuo" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <include
            android:id="@+id/setting_foot_res"
            layout="@layout/activity_home_foot"
            />
    </RelativeLayout>
</LinearLayout>
